{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@api/*": ["./pages/api/*"],
      "@kits": ["./components/kit/index"],
      "@kits/*": ["./components/kit/*"],
      "@components/*": ["./components/*"],
      "@validators": ["./validators/index"],
      "@utils": ["./utils/index"],
      "@models": ["./models/index"],
      "@models/*": ["./models/*"],
      "@services": ["./services/index"],
      "@constants": ["./constants/index"],
      "@stylesheets": ["./stylesheets/index"],
      "@stylesheets/*": ["./stylesheets/*"],
      "@helpers": ["./helpers/index"],
      "@localReducers": ["./localReducers/index"],
      "@hooks": ["./hooks/index"],
      "@i18n": ["./i18n/index"],
      "@config": ["./config"],
      "@contexts/*": ["./contexts/*"],
      "@images": ["./public/images/index"],
      "@data": ["./data/index"]
    }
  },
  "exclude": ["node_modules", "dist", ".next"]
}
